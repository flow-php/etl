<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="tools/vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         bootstrap="tests/bootstrap.php"
         cacheResultFile="var/phpunit/.result.cache"
         executionOrder="random"
>
  <php>
    <env name="ELASTICSEARCH_URL" value="localhost:9200" />
    <env name="PGSQL_DATABASE_URL" value="postgresql://postgres:postgres@127.0.0.1:5432/postgres?serverVersion=11%26charset=utf8" />
  </php>

  <coverage>
    <include>
      <directory suffix=".php">./src</directory>
    </include>
    <report>
      <html outputDirectory="var/phpunit/coverage/html" lowUpperBound="95" highLowerBound="100"/>
    </report>
  </coverage>
  <logging/>
  <testsuites>
    <testsuite name="unit">
      <directory suffix=".php">tests/Flow/ETL/Tests/Unit</directory>
      <directory suffix=".php">tests/Flow/Serializer/Tests/Unit</directory>
      <directory suffix=".php">tests/Flow/ArrayComparison/Tests/Unit</directory>
    </testsuite>
    <testsuite name="integration">
      <directory suffix=".php">tests/Flow/ETL/Tests/Integration</directory>
    </testsuite>
    <testsuite name="functional">
      <directory suffix=".php">tests/Flow/ETL/Tests/Functional</directory>
    </testsuite>
  </testsuites>
</phpunit>
